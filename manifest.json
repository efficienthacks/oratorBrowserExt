{
  "name": "Email Me the Text/Audio - My Orator",
  "short_name": "My Orator",
  "version": "0.0.8",
  "manifest_version": 2,
  "description": "Send articles to your email, your Echo, and your podcast feed so that you can consume it anywhere without distractions.",
  "icons": {
    "16": "icons/icon-16.png",
    "128": "icons/icon-128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "scripts/background.js"
    ]
  },
  "permissions": [
    "tabs",
    "storage",
    "identity",
    "notifications"
  ],
  "options_ui": {
    "page": "options.html"
  },
  
  "browser_action": {
    "default_icon": {
      "19": "icons/icon-19.png",
      "38": "icons/icon-38.png"
    },
    "default_title": "Send To My Orator",
    "default_popup": "popup.html"
  },
  "commands": {
		"save-page-shortcut": {
			"suggested_key": {
				"default": "Ctrl+Shift+Space"
			},
			"description": "Send to My Orator"
    },
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+Space"
      }
    }
	}
}


